---
import { Image, Picture } from '@astrojs/image/components'

import Layout from '../layouts/Base.astro'
import { H1, H2, H4, Paragraph } from '../components/typography'

import shopImage from '../images/sklep-oswietleniowy-sigmatorun-wnetrze.jpg'
import EcommerceWebsitePic from '../images/lampypolska-sklep-desktop-view.png'
import Button from '../components/Button.astro'

import BrandSlider from '../components/BrandSlider.astro'

type OfferItem = {
    title: string
    description: string
}

const offerList: Array<OfferItem> = [
    {
        title: 'Realizacja lampy na indywidualne zamówienie',
        description:
            'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed at lectus dui. Duis placerat consectetur risus ut posuere.',
    },
    {
        title: 'Projektowanie oświetlenia w domach i mieszkaniach',
        description:
            'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed at lectus dui. Duis placerat consectetur risus ut posuere.',
    },
    {
        title: 'Tysiące lamp dostępnych od ręki',
        description:
            'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed at lectus dui. Duis placerat consectetur risus ut posuere.',
    },
    {
        title: 'Montaż',
        description:
            'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed at lectus dui. Duis placerat consectetur risus ut posuere.',
    },
    {
        title: 'Obsługa inwestycji',
        description:
            'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed at lectus dui. Duis placerat consectetur risus ut posuere.',
    },
    {
        title: 'Serwis',
        description:
            'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed at lectus dui. Duis placerat consectetur risus ut posuere.',
    },
]
---

<Layout>
    <section id="home">
        <div class="wl-container relative overflow-hidden">
            <div
                class="absolute -top-full left-0 -bottom-full right-0 opacity-10 flex justify-between -z-10 blur-xl"
            >
                <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                    <path
                        fill="#F1C21B"
                        d="M60,-14.9C68.7,7,60.2,39,40,53.3C19.8,67.5,-12,63.9,-35.1,47.3C-58.3,30.7,-72.8,1.2,-65.5,-18.9C-58.2,-38.9,-29.1,-49.5,-1.7,-49C25.7,-48.4,51.4,-36.8,60,-14.9Z"
                        transform="translate(100 100)"></path>
                </svg>
                <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                    <path
                        fill="#F1C21B"
                        d="M50.5,-55.2C61.5,-39.5,63.7,-19.8,63.8,0C63.8,19.8,61.7,39.7,50.7,55.6C39.7,71.5,19.8,83.5,3.4,80.1C-13.1,76.7,-26.1,57.9,-39.6,42C-53,26.1,-66.8,13.1,-69.7,-2.9C-72.6,-18.8,-64.6,-37.7,-51.1,-53.4C-37.7,-69.2,-18.8,-81.8,0.5,-82.3C19.8,-82.7,39.5,-71,50.5,-55.2Z"
                        transform="translate(100 100)"></path>
                </svg>
            </div>
            <div class="max-w-3xl m-auto text-center py-10 sm:py-20">
                <H1 className="text-4xl md:!text-6xl"
                    >Sigma - Sklep z oświetleniem w Toruniu.</H1
                >
            </div>
        </div>
        <div class="flex flex-col-reverse sm:flex-row">
            <div
                class="bg-[url('/images/main-header.jpg')] bg-no-repeat bg-cover bg-bottom w-full sm:w-[50%] aspect-w-3 aspect-h-2 sm:aspect-none"
            >
            </div>
            <div
                class="border-y border-stone-200 pt-2 pb-6 sm:py-14 w-full sm:w-[50%]"
            >
                <div class="max-w-xl container-padding m-auto sm:m-0 sm:pl-14">
                    <Paragraph className="mt-4 !text-base sm:!text-lg"
                        >Tysiące lamp dostępnych od ręki. Tysiące godzin
                        doświadczeń z oświetleniem. Tysiące rozwiązań
                        oświetleniowych.</Paragraph
                    >
                    <div class="mt-6">
                        <Button
                            class="px-14 block w-full lg:w-auto lg:inline-block"
                            >Wyznacz trasę</Button
                        >
                        <Button
                            type="outline"
                            class="w-full mt-4 lg:mt-0 lg:w-auto lg:ml-2"
                            >Skontaktuj się z nami</Button
                        >
                    </div>
                    <div class="mt-6 lg:mt-10 font-semibold">
                        Galeria AMC
                        <div>Joachima Lelewela 33</div>
                        <div>87-100 Toruń</div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="oferta">
        <div
            class="wl-container mt-10 md:mt-20 lg:mt-32 flex-col-reverse lg:flex-row flex items-center"
        >
            <div class="lg:w-[50%]">
                <!-- <div class="bg-stone-500 h-full"></div> -->
                <div class="p-8 bg-primary-yellow">
                    <Image
                        src={shopImage}
                        alt="Wnętrze sklepu sigma w Toruniu"
                        format="webp"
                        quality={10}
                    />
                </div>
            </div>
            <div class="flex-1 lg:ml-14 mb-16 lg:mb-0">
                <div class="max-w-md mx-auto">
                    <H2>Nasza oferta</H2>
                    <ul class="mt-8">
                        {
                            offerList.map(offer => (
                                <li class="mt-6 flex font-medium">
                                    <span class="w-6 h-6 flex items-center justify-center bg-primary-yellow rounded-full mr-5 text-black font-bold">
                                        -&gt
                                    </span>
                                    {offer.title}
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="wl-container mt-12 lg:mt-24">
            <div class="pt-12 lg:pt-24 border-t border-stone-200">
                <div class="grid grid-cols-12 lg:gap-x-20">
                    {
                        offerList.map(offer => (
                            <div class="col-span-12 lg:col-span-6 xl:col-span-4 mb-14 lg:mb-28">
                                <H4 className="min-h-[4rem] flex items-center">
                                    <div class="mr-5 bg-primary-yellow p-2 rounded-full">
                                        {' '}
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="24"
                                            height="24"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            class="feather feather-check w-4 h-auto"
                                        >
                                            <polyline points="20 6 9 17 4 12" />
                                        </svg>{' '}
                                    </div>
                                    {offer.title}
                                </H4>
                                <Paragraph className="mt-4">
                                    {offer.description}
                                </Paragraph>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </section>
    <section id="marki">
        <div class="pt-12 lg:pt-24 border-t border-stone-200">
            <div class="wl-container">
                <div class="max-w-lg m-auto text-center">
                    <H2>Współpracujemy z wieloma topowymi markami</H2>
                    <Paragraph className="mt-6"
                        >Na przestrzeni działalności sklepu sigma, nawiązaliśmy
                        stałe współprace z jednymi z największych marek branży
                        oświetleniowej w Europie.</Paragraph
                    >
                </div>
            </div>
        </div>
        <div class="bg-primary-yellow mt-16 border-y border-primary-yellow-100">
            <div class="wl-container py-6 md:py-10">
                <div class="pt-4 md:pt-10 pb-5 md:pb-12">
                    <BrandSlider />
                </div>
            </div>
        </div>
    </section>
    <section id="sklep" class="pt-16 xl:pt-28 wl-container pb-6 xl:pb-28">
        <div class="mb-8 w-full text-center">
            <img
                src="/images/lampypolska-ikonka.png"
                alt="Ikonka sklepu lampypolska.pl"
                class="w-12 xl:w-14 inline-block"
            />
        </div>
        <div class="h-auto relative bg-stone-50">
            <div class="xl:flex pt-8 xl:pt-20 overflow-hidden">
                <div class="max-w-lg px-8 xl:px-20">
                    <H2>Sklep internetowy Lampypolska.pl</H2>
                    <ul class="mt-10">
                        <li
                            class="my-3 xl:text-lg font-medium text-neutral-500"
                        >
                            Wysyłka w 24h
                        </li>
                        <li
                            class="my-3 xl:text-lg font-medium text-neutral-500"
                        >
                            Wygodne metody płatności:
                        </li>
                        <li
                            class="my-3 xl:text-lg font-medium text-neutral-500"
                        >
                            (Przelewy24, PayPal)
                        </li>
                        <li
                            class="my-3 xl:text-lg font-medium text-neutral-500"
                        >
                            Rabaty koszykowe
                        </li>
                    </ul>
                    <Button href="https://lampypolska.pl" class="mt-10"
                        >Zobacz sklep</Button
                    >
                </div>
                <div
                    class="mt-14 pb-8 pl-8 xl:p-0 xl:mt-0 xl:flex-1 -mr-14 xl:mr-0"
                >
                    <Image
                        src={EcommerceWebsitePic}
                        format="webp"
                        alt="Sklep internetowy Lampypolska.pl by sigmatorun.pl"
                        class="border-t border-l border-stone-200"
                        quality={15}
                    />
                </div>
            </div>
        </div>
    </section>
</Layout>
