---
import BaseHead from '../components/BaseHead.astro'
import Nav from '../components/Nav.astro'
import type { Props as BaseHeadProps } from '../components/BaseHead.astro'

import '../styles/app.css'
import '../styles/fonts.css'
import '../styles/tailwind.css'
import { H2 } from '../components/typography'

export interface Props {
    meta?: BaseHeadProps
}

const { meta } = Astro.props
---

<html lang="pl">
    <head>
        <BaseHead {...meta} />
    </head>
    <body>
        <Nav />
        <main class="mt-[112px]">
            <slot />
        </main>
        <div class="wl-container flex pt-12 pb-24" id="kontakt">
            <div>
                <H2>Kontakt</H2>
            </div>
        </div>
        <div class="bg-black">
            <div class="mapouter opacity-100">
                <div class="gmap_canvas">
                    <iframe
                        width="100%"
                        height="500"
                        id="gmap_canvas"
                        src="https://maps.google.com/maps?q=sigma%20toru%C5%84&t=&z=13&ie=UTF8&iwloc=&output=embed"
                        frameborder="0"
                        scrolling="no"
                        marginheight="0"
                        marginwidth="0"></iframe><a
                        href="https://fmovies-online.net">fmovies</a
                    ><br /><style>
                        .mapouter {
                            position: relative;
                            text-align: right;
                            height: 500px;
                            width: 100%;
                        }
                    </style><a href="https://www.embedgooglemap.net"
                        >google maps widget</a
                    ><style>
                        .gmap_canvas {
                            overflow: hidden;
                            background: none !important;
                            height: 500px;
                            width: 100%;
                        }
                    </style>
                </div>
            </div>
        </div>
    </body>
</html>
